<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/special_rounded_rectangle"
                android:padding="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:text="Upload Description"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/written_article"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif-light"
                    android:padding="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/add_file"
                android:gravity="center"
                android:background="@drawable/round_cyan_button"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_insert_drive_file"
                    android:fontFamily="sans-serif-light"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Add Files"
                    android:padding="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:id="@+id/button_publish"
                android:gravity="center"
                android:background="@drawable/round_cyan_button"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-light"
                    android:src="@drawable/ic_cloud_upload"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Upload"
                    android:padding="8dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:background="@drawable/round_red_button"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-light"
                    android:src="@drawable/ic_cancel"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Cancel"
                    android:padding="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>